                                                            <!-- js code -->
function TempGrade(){

    let name= prompt("Enter your name")

    let stdTm_Marks = document.getElementById("tm1").value;

    let stdObt_Marks = document.getElementById("obt1").value;

    res=(stdObt_Marks/stdTm_Marks)*100 ;
    document.getElementById("res").innerHTML  = `<h3> Dear ${name},you have got it ${res}% <h3/>`

let grade=document.getElementById("res").value;
 
if (grade >= 90) {
    document.getElementById("res").innerHTML = `Congratulations ${name}, you Got A+ Grade`
}else if (grade >= 80) {
    document.getElementById("res").innerHTML = `Congratulations ${name}, you Got A Grade`
}else if (grade >= 70) {
    document.getElementById("res").innerHTML = `Congratulations ${name}, you Got B+ Grade`
}else if (grade >= 60) {
    document.getElementById("res").innerHTML = `Congratulations ${name}, you Got B Grade`
}else if (grade >= 50) {
    document.getElementById("res").innerHTML = `Congratulations ${name}, you Got C Grade`
}else if (grade >= 33) {
    document.getElementById("res").innerHTML = `Congratulations ${name}, you Got D Grade`
}else if (grade< 33) {
    document.getElementById("res").innerHTML = `Opps You Failed This... Better Luck Next Time`
}

}
